<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y200"
    android:orientation="vertical">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/y185"
    android:background="@color/white">
    <!--充值历史item  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x55"
        android:paddingTop="@dimen/y25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y55"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zhifubao_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/x20"
                android:text="" />
            <TextView
                android:id="@+id/zhifubao_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x25"
                android:text="2017-11-08 21:36"
                android:textColor="@color/dark_gary"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25"
                android:text="￥"
                android:textColor="#fe504f"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/zhifubao_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25"
                android:text="559.00"
                android:textColor="#fe504f"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>
    <!-- 已完成的状态-->
