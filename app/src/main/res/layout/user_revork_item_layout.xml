<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y345"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/x220"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y140"
            android:layout_marginTop="@dimen/y15"
            android:src="@drawable/help_banner"
            app:civ_border_color="#c9b2b9"
            app:civ_border_width="1dp" />

        <TextView
            style="@style/BlackTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="清风荣耀" />

        <TextView
            android:layout_width="@dimen/x135"
            android:layout_height="@dimen/y50"
            android:layout_marginTop="@dimen/y24"
            android:background="@drawable/shape_red_layout"
            android:gravity="center"
            android:text="已支付"
            android:textColor="#f25858"
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/ovel_bg_bitmap"
        android:tileMode="repeat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingBottom="@dimen/y5"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/begin_duanwei"
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青铜三0星"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x35"
                android:layout_marginRight="@dimen/x35"
                android:src="@drawable/a" />

            <TextView
                android:id="@+id/end_duanwei"
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="铂金三0星"
                android:textColor="#f49b01"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/dark_gary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y190"
            android:layout_marginTop="@dimen/y15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:gravity="center_vertical">

                <TextView
                    style="@style/GrayTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在区服:"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/you_area"
                    style="@style/GrayTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="王者荣耀/安卓-微信/20区"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/y5"
                android:gravity="center_vertical">

                <TextView
                    style="@style/GrayTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="角色名称:"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/your_name"
                    style="@style/GrayTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="小小攻城狮"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y95"
                android:layout_marginTop="@dimen/y5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y40"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/GrayTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余时间:"
                            android:textSize="8sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/y40"
                            android:layout_marginLeft="@dimen/x10">

                            <TextView
                                style="@style/BlackTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#ffa202"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/you_left_time"
                                style="@style/GrayTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x10"
                                android:text="小时"
                                android:textSize="8sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y5"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/GrayTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布者:    "
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/you_nickname_or_id"
                            style="@style/GrayTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x10"
                            android:text="小小攻城狮"
                            android:textSize="8sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:id="@+id/order_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥50.00"
                        android:textColor="#fe0000"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60"
                android:layout_marginRight="@dimen/x15"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/delete_orders"
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_gray_line1"
                    android:text="删除"
                    android:visibility="gone"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/check_details"
                    style="@style/BaseBtnStyle"
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="查看详情"
                    android:textSize="8sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>