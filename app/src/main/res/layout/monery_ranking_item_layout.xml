<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingLeft="@dimen/x45"
    android:gravity="center_vertical"
    android:layout_height="@dimen/y145">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rank_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            style="@style/BlackTextStyle"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rank_picture"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/y110"
            android:src="@drawable/monery_bg"
            android:layout_marginLeft="@dimen/x25"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x45"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清风荣耀战队"
                style="@style/BlackTextStyle"
                />
            <TextView

                android:id="@+id/rank_rank"
                android:layout_width="@dimen/x170"
                android:layout_height="@dimen/y40"
                android:background="@drawable/monery_ranking_bg2"
                android:gravity="center"
                android:text="最强王者"
                android:layout_marginTop="@dimen/y20"
                style="@style/DefaultTextStyle"
                android:textSize="9sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/rank_money"
            style="@style/BlackTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="335,365"
            android:layout_marginLeft="@dimen/x100"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/dianzan"
            style="@style/DefaultTextStyle"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/y55"
            android:background="@drawable/shape_tixian_process"
            android:gravity="center"
            android:layout_marginTop="@dimen/x19"
            android:layout_marginLeft="@dimen/x134"
            android:text="点赞"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/dark_gary"
        />
</LinearLayout>