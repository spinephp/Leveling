<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <ImageView
                android:id="@+id/img_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tx_title_name"
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="接单设置"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                >
            </android.support.design.widget.TabLayout>
            <ImageView
                android:id="@+id/img_title_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

        <TextView
            style="@style/LeftTextTipStyle"
            android:text="选择代练段位" />

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低接单段位"
                android:textColor="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="铂金-1星" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高接单段位"
                android:textColor="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="铂金-1星" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                android:id="@+id/textView5"
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物理铭文要求"
                android:textColor="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140级-190级" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法术铭文要求"
                android:textColor="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140级-190级" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_height="@dimen/y192"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="强势英雄"
                android:textColor="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y85"
                    android:src="@drawable/help_banner"
                    app:civ_border_color="#00000000"

                    app:civ_border_width="3dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y85"
                    android:src="@drawable/help_banner"
                    app:civ_border_color="#00000000"

                    app:civ_border_width="3dp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140级-190级" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/LeftTextTipStyle"
            android:text="选择登录系统" />

        <LinearLayout style="@style/LeveingLieanLayouStyle">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/order_seting_ios"
                android:drawablePadding="@dimen/x25"
                android:gravity="center_vertical"

                android:paddingLeft="@dimen/x50"
                android:text="苹果" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x195"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="QQ" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x100"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="微信"

                    />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/x25"
                android:drawableLeft="@drawable/order_seting_android"
                android:gravity="center_vertical"

                android:paddingLeft="@dimen/x50"
                android:text="安卓" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x190"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
android:checked="true"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="QQ" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x100"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="微信"

                    />

            </RadioGroup>


        </LinearLayout>
        <TextView
            style="@style/LeftTextTipStyle"
            android:text="《打手代练须知》"
            android:textColor="#0091e4"
            />
    </LinearLayout>
<Button
    style="@style/BaseBtnStyle"
    android:layout_centerHorizontal="true"

    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/y145"
    android:text="确  认"
    />
</RelativeLayout>