                        <!--android:layout_alignParentTop="true"-->
                        <!--android:src="@drawable/leving_time"-->
                        <!--/>-->

                    <!--<TextView-->
                        <!--style="@style/BlackTextStyle"-->
                        <!--android:layout_width="@dimen/x135"-->
                        <!--android:layout_height="@dimen/y130"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginTop="@dimen/y20"-->
                        <!--android:background="@drawable/clock"-->
                        <!--android:gravity="center"-->
                        <!--android:text="4.5"-->
                        <!--android:textColor="@color/leveing_green"-->
                        <!--android:id="@+id/true_time" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:layout_marginBottom="@dimen/y20"-->
                        <!--android:gravity="center"-->
                        <!--android:text="小时" />-->
                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:src="@drawable/leving_price"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/true_money"
                        style="@style/BlackTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/y65"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20dip"
                        android:textColor="@color/leveing_yuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y20"
                        android:gravity="center"
                        android:text="元" />


                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/to_release_order"
                style="@style/OrageBtnStyle"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/send_place_order"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:layout_marginLeft="@dimen/x30"

        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/shape_normal"
        android:paddingLeft="@dimen/x50"
        android:paddingRight="@dimen/x50">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/right_single"
            android:drawablePadding="@dimen/x15"
            android:gravity="center"
            android:text="极速响应" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x50"
            android:layout_weight="1"
            android:drawableLeft="@drawable/right_single"
            android:gravity="center"
            android:drawablePadding="@dimen/x15"
            android:text="打坏包赔" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x50"
            android:layout_weight="1"
            android:drawableLeft="@drawable/right_single"
            android:gravity="center"
            android:drawablePadding="@dimen/x15"
            android:text="随时退款" />
    </LinearLayout>
