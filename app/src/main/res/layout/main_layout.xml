                    <!--android:layout_height="@dimen/y195"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@drawable/hero" />-->
            <!--</LinearLayout>-->
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_no_orders_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginTop="@dimen/y2"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/daiwofei"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="带我飞(陪玩)" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x55"
                android:layout_marginRight="@dimen/x55"
                android:background="@color/colorPrimary" />


        </RelativeLayout>

        <View
            android:layout_width="@dimen/x5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y25"
            android:layout_marginTop="@dimen/y25"
            android:background="@color/bg_gray" />

        <RelativeLayout
            android:id="@+id/bangwoda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="帮我打(代练)" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x55"
                android:layout_marginRight="@dimen/x55" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/y395"
        android:layout_marginTop="@dimen/y1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/la_duanwei"
            android:layout_width="@dimen/x905"
            android:layout_height="@dimen/y130"
            android:gravity="center"
            android:background="@drawable/shape_gray_line"
            >
            <TextView
                android:id="@+id/begin_level"
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择初始段位"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/listview_down"

            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/pi_duanwei"
            android:layout_width="@dimen/x905"
            android:layout_height="@dimen/y130"
            android:gravity="center"
            android:background="@drawable/shape_yello_line"
            >
            <TextView
                android:id="@+id/goal_level"
                style="@style/BigTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择目标段位"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y455"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y25"
        android:background="@drawable/shape_normal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/la_main_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@drawable/libai">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/la_main_conmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y290"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/leving_time"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        style="@style/BlackTextStyle"
                        android:layout_width="@dimen/x135"
                        android:layout_height="@dimen/y130"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/y20"
                        android:background="@drawable/clock"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20dip"
                        android:textColor="@color/leveing_green"
                        android:id="@+id/true_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y20"
                        android:gravity="center"
                        android:text="小时" />


                </RelativeLayout>
                <!--<RelativeLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:orientation="vertical">-->

                    <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
