<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    <!--首页fragment -->
    <LinearLayout
        android:id="@+id/bannerFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y265"
        android:background="@drawable/send_order_banner"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y265"
        android:background="@color/white"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25">

        <ImageView
            android:id="@+id/iv_no_orders_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/right"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x55"
            android:layout_marginRight="@dimen/x55"
            android:orientation="horizontal"
            android:paddingTop="@dimen/y25">

            <LinearLayout
                android:id="@+id/ll_main_king"
                style="@style/tab_menu_item"
                android:background="@drawable/main_game_type_bg_selector"
                android:paddingBottom="@dimen/y25"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y195"
                    android:scaleType="fitXY"
                    android:src="@drawable/king" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_main_hero"
                android:layout_marginLeft="@dimen/x90"
                style="@style/tab_menu_item"

                android:paddingBottom="@dimen/y25"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y195"
                    android:scaleType="fitXY"
                    android:src="@drawable/hero" />
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:id="@+id/ll_main_hero"-->
                <!--android:layout_marginLeft="@dimen/x90"-->
                <!--style="@style/tab_menu_item"-->
                <!--android:background="@drawable/main_game_type_bg_selector"-->
                <!--android:paddingBottom="@dimen/y25"-->
                <!--android:paddingLeft="@dimen/x10"-->
                <!--android:paddingRight="@dimen/x10">-->

                <!--<ImageView-->
                    <!--style="@style/tab_menu_item"-->
