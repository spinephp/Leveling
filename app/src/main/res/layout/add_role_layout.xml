<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    <!--添加账号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/title_layout" />

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:paddingLeft="@dimen/x50">

            <TextView
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="游戏账号" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/x100"
                android:paddingRight="10dp"

                >

                <EditText

                    style="@style/DefaultEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:hint="请输入游戏账号" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50">

            <TextView
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="游戏账号" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/x100"
                android:paddingRight="10dp"

                >

                <EditText

                    style="@style/DefaultEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:hint="请输入游戏账号" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                android:id="@+id/textView5"
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物理铭文要求" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140级-190级" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法术铭文要求" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140级-190级" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_height="@dimen/y192"
            android:layout_marginTop="@dimen/y1"

            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="强势英雄" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y85"
                    android:src="@drawable/help_banner"
                    app:civ_border_color="#00000000"

                    app:civ_border_width="3dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y85"
                    android:src="@drawable/help_banner"
                    app:civ_border_color="#00000000"

                    app:civ_border_width="3dp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/BlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140级-190级" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x60"
                    android:src="@drawable/left" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/LeftTextTipStyle"
            android:text="选择登录系统" />

        <LinearLayout style="@style/LeveingLieanLayouStyle">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/order_seting_ios"
                android:drawablePadding="@dimen/x25"
                android:gravity="center_vertical"

                android:paddingLeft="@dimen/x50"
                android:text="苹果" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x195"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="QQ" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x100"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="微信"

                    />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/order_seting_android"
                android:drawablePadding="@dimen/x15"
                android:gravity="center_vertical"

                android:paddingLeft="@dimen/x50"
                android:text="安卓" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x195"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="QQ" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x100"
                    android:button="@null"
                    android:drawableLeft="@drawable/order_seting_chooles_selector"
                    android:drawablePadding="@dimen/x10"
                    android:text="微信"

                    />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            style="@style/LeveingLieanLayouStyle"
            android:layout_marginTop="@dimen/y1"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50">

            <TextView
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="具体区服" />


            <TextView
                style="@style/BlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x60"
                android:text="默认区服"
                android:textColor="#0091e4" />


        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/BaseBtnStyle"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y145"
        android:text="确认添加" />
</RelativeLayout>